{
    "name": "ahnabshahin/spin-the-wheel",
    "description": "A customizable and feature-rich spin-the-wheel plugin for WordPress",
    "type": "wordpress-plugin",
    "keywords": ["wordpress", "plugin", "wheel", "spin", "lottery", "game"],
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Ahnab Shahin",
            "email": "shahinahnab@gmail.com",
            "homepage": "https://github.com/AhnabShahin"
        }
    ],
    "require": {
        "php": ">=7.4",
        "composer/installers": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "wp-coding-standards/wpcs": "^3.0",
        "squizlabs/php_codesniffer": "^3.7",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "AhnabShahin\\SpinTheWheel\\": "classes/",
            "AhnabShahin\\SpinTheWheel\\ROOT\\": "",
            "AhnabShahin\\SpinTheWheel\\Includes\\": "includes/"
        },
        "files": [
            "includes/log.php",
            "includes/plugin-constants.php",
            "includes/functions.php"
        ],
        "exclude-from-classmap": [
            "node_modules/",
            "tests/",
            "ui-resources/",
            "pre-build-ui-resources/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "AhnabShahin\\SpinTheWheel\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs --standard=WordPress classes/ includes/",
        "phpcbf": "phpcbf --standard=WordPress classes/ includes/",
        "lint": "composer run phpcs",
        "fix": "composer run phpcbf"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "optimize-autoloader": true,
        "classmap-authoritative": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
